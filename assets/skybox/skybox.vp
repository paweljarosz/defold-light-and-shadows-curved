#version 140

uniform vs_uniforms
{
	uniform mediump mat4 view_proj;
	uniform mediump mat4 world;
	uniform mediump vec4 sky_offset;
};

in highp vec3 position;

out mediump vec3 var_texcoord0;

void main()
{
	// Transform with the skybox view (rotation only) and projection.
	mat4 wvp = view_proj * world;
	vec4 wvp_pos = wvp * vec4(position, 1.0);
	gl_Position = wvp_pos.xyww;

	// Cubemap lookup with optional offset to slide the texture.
	var_texcoord0 = normalize(position + sky_offset.xyz);
}
